<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TogActivityMapper">
    
    <resultMap type="TogActivity" id="TogActivityResult">
        <result property="id"    column="id"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="activityName"    column="activity_name"    />
        <result property="place"    column="place"    />
        <result property="peopleNum"    column="people_num"    />
        <result property="content"    column="content"    />
        <result property="associationId"    column="association_id"    />
    </resultMap>

    <sql id="selectTogActivityVo">
        select id, create_by, create_time, update_by, update_time, activity_name, place, people_num, content, association_id from tog_activity
    </sql>

    <select id="selectTogActivityList" parameterType="TogActivity" resultMap="TogActivityResult">
        <include refid="selectTogActivityVo"/>
        <where>  
            <if test="activityName != null  and activityName != ''"> and activity_name like concat('%', #{activityName}, '%')</if>
            <if test="place != null  and place != ''"> and place = #{place}</if>
            <if test="peopleNum != null "> and people_num = #{peopleNum}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="associationId != null "> and association_id = #{associationId}</if>
        </where>
    </select>
    
    <select id="selectTogActivityById" parameterType="Long" resultMap="TogActivityResult">
        <include refid="selectTogActivityVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertTogActivity" parameterType="TogActivity" useGeneratedKeys="true" keyProperty="id">
        insert into tog_activity
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="activityName != null">activity_name,</if>
            <if test="place != null">place,</if>
            <if test="peopleNum != null">people_num,</if>
            <if test="content != null">content,</if>
            <if test="associationId != null">association_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="activityName != null">#{activityName},</if>
            <if test="place != null">#{place},</if>
            <if test="peopleNum != null">#{peopleNum},</if>
            <if test="content != null">#{content},</if>
            <if test="associationId != null">#{associationId},</if>
         </trim>
    </insert>

    <update id="updateTogActivity" parameterType="TogActivity">
        update tog_activity
        <trim prefix="SET" suffixOverrides=",">
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="activityName != null">activity_name = #{activityName},</if>
            <if test="place != null">place = #{place},</if>
            <if test="peopleNum != null">people_num = #{peopleNum},</if>
            <if test="content != null">content = #{content},</if>
            <if test="associationId != null">association_id = #{associationId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTogActivityById" parameterType="Long">
        delete from tog_activity where id = #{id}
    </delete>

    <delete id="deleteTogActivityByIds" parameterType="String">
        delete from tog_activity where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>